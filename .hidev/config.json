    "deps": "all",
    "all": {
        "deps": "git, composer, LICENSE, README.md, CHANGELOG.md"
    },
    "aliases": {
        "h":        "grep",
        "g":        "default/grep"
    },
    "test": {
        "deps": "LICENSE"
    },
    "composer": {
        "self-update":  true
    },
    "composer.json": {
        "require": {
            "yiisoft/yii2":             "2.*",
            "hiqdev/yii2-collection":   "*@dev"
        },
        "autoload": {
            "psr-4": {
                "hiqdev\\yii2-pluginmanager\\": ""
